<% if @user.errors.any? %>
	<% @user.errors.full_messages.each do |error| %>
		<%= error %>
		<br>
	<% end %>
<% end %>
<h1> Sign up for an account at JeffBook </h1>

<%= form_for(@user) do |f| %>

<%= f.text_field :name %>
<%= f.label :name, "Enter you Name"%>
<br>
<%= f.password_field :password %>
<%= f.label :password, "Enter a Password"%>
<br>
<%= f.text_area :about %>
<br>
<%= f.label :about, "Tell us a little about yourself (max 250 characters)"%>
<br>
<%= f.submit "SUBMIT YOUR FIRST BORN"%>
<% end %>
	
	
	